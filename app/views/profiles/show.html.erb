<div id="profiles-wrapper">
<p id="notice"><%= notice %></p>
<div class="container">
	<div class="card teal">

		<div class="row">
			<div class="col s12">
				<h1><%= @profile.name %></h1>
				<img src="<%= @profile.image_url%>" style="width: 400px; height: auto">
				<ul class="collection">
				    <li class="collection-item avatar">
				      <i class="material-icons circle">email</i>
				      <span class="title">Email</span>
				      <p><%= @profile.email %>
				      </p>
				    </li>
				    <li class="collection-item avatar">
				      <i class="material-icons circle">assignment</i>
				      <span class="title">Alma Mater</span>
				      <p>
				      	  <%= @profile.alma %>
				      </p>
				    </li>
				 </ul>
			</div>
		</div>

			<div class="links row">
				<div class="col s6">
					<i class="material-icons circle">fast_rewind</i>
					<%= link_to 'Back', profiles_path %>
				</div>
				<div class="col s6">
					<i class="material-icons circle">settings_applications</i>
					<%= link_to 'Edit', edit_profile_path(@profile) %>
				</div>
			</div>

		</div> 
	</div>
</div>

</div>

